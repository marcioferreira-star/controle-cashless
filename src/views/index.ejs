  }
</style>

<div class="page">

  <h1>Dashboard</h1>

  <!-- ================================
          KPI CARDS
       ================================ -->
  <div class="kpis">

    <div class="card-kpi kpi-total">
      <div>
        <div class="kpi-label">Total</div>
        <div class="kpi-value" id="kpiTotal">0</div>
      </div>
      <div class="kpi-icon">üì¶</div>
    </div>

    <div class="card-kpi kpi-disp">
      <div>
        <div class="kpi-label">Dispon√≠veis</div>
        <div class="kpi-value" id="kpiDisp">0</div>
      </div>
      <div class="kpi-icon">‚úÖ</div>
    </div>

    <div class="card-kpi kpi-uso">
      <div>
        <div class="kpi-label">Em Uso</div>
        <div class="kpi-value" id="kpiUso">0</div>
      </div>
      <div class="kpi-icon">üöö</div>
    </div>

    <div class="card-kpi kpi-atrasadas">
      <div>
        <div class="kpi-label">Atrasadas</div>
        <div class="kpi-value" id="kpiAtras">0</div>
      </div>
      <div class="kpi-icon">‚è∞</div>
    </div>
    <div class="card-kpi kpi-fixas">
      <div>
        <div class="kpi-label">Fixas</div>
        <div class="kpi-value" id="kpiFixas">0</div>
      </div>
      <div class="kpi-icon">üìå</div>
    </div>


  </div>

</div>

<script>
  /* Dados vindos do backend */
  const resumo = <%- JSON.stringify(resumo || {}) %>;

  /* ============================
        ANIMA√á√ÉO DE CONTAGEM
     ============================ */
  function animateCount(el, target, duration = 900) {
    let start = 0;
    const step = 20;
    const increment = target / (duration / step);

    const counter = setInterval(() => {
      start += increment;
      if (start >= target) {
        start = target;
        clearInterval(counter);
      }
      el.textContent = Math.floor(start);
    }, step);
  }

  animateCount(document.getElementById("kpiTotal"), resumo.total || 0);
  animateCount(document.getElementById("kpiDisp"), resumo.disponiveis || 0);
  animateCount(document.getElementById("kpiUso"), resumo.emUso || 0);
  animateCount(document.getElementById("kpiFixas"), resumo.fixas || 0);
  animateCount(document.getElementById("kpiAtras"), resumo.atrasadas || 0);

</script>

