  }

  /* ============================
       KPIs ‚Äì Cards Horizontais
     ============================ */
  .kpis {
    display: flex;
    gap: 22px;
    flex-wrap: wrap;
  }

  .card-kpi {
    flex: 1;
    min-width: 220px;
    border-radius: 18px;
    padding: 22px;
    display: flex;
    align-items: center;
